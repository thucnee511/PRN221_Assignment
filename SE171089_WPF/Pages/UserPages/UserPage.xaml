<Page x:Class="SE171089_WPF.Pages.UserPages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SE171089_WPF.Pages.UserPages"
      mc:Ignorable="d" 
      d:DesignHeight="620" d:DesignWidth="1080"
      Title="UserPage">
    <Grid Background="White">
        <DataGrid x:Name="dtgUsers" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="540,50,50,50"
                  VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                  AutoGenerateColumns="True" AutoGeneratingColumn="DataGrid_AutoGeneratingColumn"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
        <TextBox HorizontalAlignment="Left" Margin="50,50,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="350" Height="20" />
        <Button Content="Button" HorizontalAlignment="Left" Margin="495,550,0,0" VerticalAlignment="Top"/>
        <Button Content="Search" HorizontalAlignment="Left" Margin="435,50,0,0" VerticalAlignment="Top" Width="100" Height="20">
        </Button>

    </Grid>
</Page>
